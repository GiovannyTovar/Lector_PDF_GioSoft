<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LectorPDFGioSoft" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0E314A</item>
        <item name="colorPrimaryVariant">#0E314A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Añade estos nuevos items para la Toolbar -->
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- Estilo personalizado para Toolbar -->
    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>

    <!-- Estilo personalizado para ActionBar -->
    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Estilo para el texto del título -->
    <style name="MyTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>