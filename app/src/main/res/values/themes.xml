<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.LectorPDFGioSoft" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#0E314A</item>
        <item name="colorPrimaryDark">#0A2438</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Forzar tema claro en todos los componentes -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>

        <!-- Configuración de componentes específicos -->
        <item name="cardViewStyle">@style/MyCardViewStyle</item>
        <item name="buttonStyle">@style/MyButtonStyle</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">#DDDDDD</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>
</resources>